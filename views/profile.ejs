</head>
<body>
  <nav class="navbar navbar-light bg-dark">
    <a  class="navbar-brand" href="#">Navbar</a>
  </nav>
  
  <div class="sidenav" >
    <a href="/profile/">Profile</a>
    <a href="/label/">Labels</a>
    <a href="/task/">Task</a>
    <a href="/profile/images/">MyImages</a>
    <a href="/changepassword/">Password</a>
    <a href="/auth/logout/">Logout</a>
  </div>

  
<form action="/profile/upload/" method="POST" enctype="multipart/form-data" style="margin-left: 5cm;margin-top: 5cm">
    <%= typeof msg != 'undefined' ? msg : '' %>
    <%if(locals.result&&locals.result.imagePresent == 1){%>
     <% var x="/uploads/"+locals.result.imagePath%>
      <img id="myimage" alt="Upload Image" src="<%=x%>" class="responsive-img" style="width:200px;height:200px;">
      <%}else{%>
    <img id="myimage" alt="Upload Image" src='/avatar-default-thumb.jpg' class="responsive-img" style="width:200px;height:200px;">
    <%}%>
    <div class="custom-file">
        <div class="btn grey">
        </br>
          <input name="myImage" type="file">
      </br>
        </div>
      </div>
    </br>
    </br>
  </br>
  <%if(locals.result){%>
      <input class="form-control" type="text" placeholder=<%=locals.result.email%> readonly>
   <%}%>
   
    </br>
      <button type="submit" class="btn btn-dark">Submit</button>
  </form>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
